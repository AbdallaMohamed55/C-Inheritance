// 1) Single Inheritance :

#include <iostream>
using namespace std;

class Vehicle {
public:
    Vehicle() {
        cout << "This is a Vehicle\n";
    }
};

class Car : public Vehicle {
public:
    Car() {
        cout << "This is a Car\n";
    }
};

int main() {
    Car obj;
    return 0;
}

// 2) Multiple Inheritance : 

#include <iostream>
using namespace std;

class Engine {
public:
    Engine() {
        cout << "Engine started\n";
    }
};

class Wheels {
public:
    Wheels() {
        cout << "Wheels ready\n";
    }
};

class Car : public Engine, public Wheels {
public:
    Car() {
        cout << "Car is ready\n";
    }
};

int main() {
    Car c;
    return 0;
}

// 3) Multilevel Inheritance :

#include <iostream>
using namespace std;

class Vehicle {
public:
    Vehicle() {
        cout << "This is a Vehicle\n";
    }
};

class Car : public Vehicle {
public:
    Car() {
        cout << "This is a Car\n";
    }
};

class SportsCar : public Car {
public:
    SportsCar() {
        cout << "This is a Sports Car\n";
    }
};

int main() {
    SportsCar sc;
    return 0;
}

// 4) Hierarchical Inheritance :

#include <iostream>
using namespace std;

class Vehicle {
public:
    void type() {
        cout << "This is a Vehicle\n";
    }
};

class Car : public Vehicle {
public:
    void carInfo() {
        cout << "This is a Car\n";
    }
};

class Bike : public Vehicle {
public:
    void bikeInfo() {
        cout << "This is a Bike\n";
    }
};

int main() {
    Car c;
    Bike b;
    c.type();
    c.carInfo();
    b.type();
    b.bikeInfo();
    return 0;
}

// 5) Hybrid Inheritance :

#include <iostream>
using namespace std;

class Engine {
public:
    void showEngine() {
        cout << "This is Engine\n";
    }
};

class Vehicle {
public:
    void showVehicle() {
        cout << "This is Vehicle\n";
    }
};

class Car : public Engine, public Vehicle {
public:
    void showCar() {
        cout << "This is Car\n";
    }
};

class SportsCar : public Car {
public:
    void showSportsCar() {
        cout << "This is Sports Car\n";
    }
};

int main() {
    SportsCar sc;
    sc.showEngine();
    sc.showVehicle();
    sc.showCar();
    sc.showSportsCar();
    return 0;
}
